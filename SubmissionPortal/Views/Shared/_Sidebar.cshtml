@using Microsoft.AspNetCore.Authorization
@{
	var currentController = ViewContext.RouteData.Values["Controller"] as string;
}

<style>
	.main-sidebar .sidebar {
	overflow: hidden !important;
	}
</style>

<aside style="background-color: #0b2972" class="main-sidebar sidebar-dark-primary elevation-4">

	<a style="background-color: white; max-height: 57px" asp-controller="Home" asp-action="Index" class="brand-link">
		<img src="~/img/image.jpg"
			 alt="DataTool Logo"
			 style="width: 100%; max-height: 60px; object-fit: contain; margin-top: -8px;">
	</a>

	<div class="sidebar os-host os-theme-light os-host-overflow os-host-overflow-y os-host-resize-disabled os-host-scrollbar-horizontal-hidden os-host-transition">
		<div class="os-resize-observer-host observed">
			<div class="os-resize-observer" style="left: 0px; right: auto;"></div>
		</div>
		<div class="os-size-auto-observer observed" style="height: calc(100% + 1px); float: left;">
			<div class="os-resize-observer"></div>
		</div>
		<div class="os-padding">
			<div class="os-viewport os-viewport-native-scrollbars-invisible">
				<div class="os-content" style="padding: 0px 8px; height: 100%; width: 100%;">
					<div class="user-panel mt-3 pb-3 mb-3 d-flex">
						<div class="image">
						</div>
						<div class="info">
							@* <a class="d-block">
								@Context.User.Claims.Where(x => x.Type == "name").FirstOrDefault()?.Value
							</a> *@
							<a class="d-block">
								Hardcoded Name
							</a>

						</div>
					</div>
					<nav class="mt-2">
						<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

							<li class="nav-item" style="margin-left: -8px; margin-bottom: 5px;">
								<a class="nav-link">
									<i class="fa fa-th-large" style="font-size: 20px;"></i> <p class="ml-2">Dashboard</p>
								</a>
							</li>

							<li class="nav-item" style="margin-left: -8px; margin-bottom: 5px;">
								<a asp-controller="Checklist" asp-action="Index" class="nav-link @(currentController == "Checklist" ? "active" : "")">
									<i class="fa fa-tasks" style="font-size: 20px;"></i><p class="ml-2">Checklist Setup</p>
								</a>
							</li>

							<li class="nav-item" style="margin-left: -8px; margin-bottom: 5px;">
								<a class="nav-link">
									<i class="fa fa-user-cog" style="font-size: 20px;"></i><p class="ml-2">User Management</p>
								</a>
							</li>

						</ul>
					</nav>
				</div>
			</div>
		</div>
	</div>
	<div class="os-scrollbar os-scrollbar-horizontal os-scrollbar-unusable os-scrollbar-auto-hidden">
		<div class="os-scrollbar-track">
			<div class="os-scrollbar-handle" style="width: 100%; transform: translate(0px, 0px);"></div>
		</div>
	</div>
	<div class="os-scrollbar os-scrollbar-vertical os-scrollbar-auto-hidden">
		<div class="os-scrollbar-track">
			<div class="os-scrollbar-handle" style="height: 56.6604%; transform: translate(0px, 0px);"></div>
		</div>
		<div class="os-scrollbar-corner">
		</div>
	</div>
</aside>


